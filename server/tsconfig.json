{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",             /* Use CommonJS for Node.js compatibility */
    "moduleResolution": "node",       /* Standard Node resolution */
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,          /* Allow importing CommonJS modules like Express */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false     /* DISABLE THIS to fix the import error */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}